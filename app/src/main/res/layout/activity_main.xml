<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".MainActivity">

    <ListView
            android:id="@+id/listtt"
            android:layout_width="396dp"
            android:layout_height="303dp"
            android:layout_marginStart="7dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <EditText
            android:id="@+id/editText"
            android:layout_width="294dp"
            android:layout_height="45dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="32dp"
            android:ems="10"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/listtt" android:hint="Enter a new item"/>


    <ImageButton
            android:layout_width="56dp"
            android:layout_height="49dp"
            app:srcCompat="@drawable/ic_done_black_24dp"
            android:id="@+id/button"
            android:background="#ffffff" android:layout_marginStart="33dp"
            app:layout_constraintStart_toEndOf="@+id/editText" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/listtt"/>
</androidx.constraintlayout.widget.ConstraintLayout>